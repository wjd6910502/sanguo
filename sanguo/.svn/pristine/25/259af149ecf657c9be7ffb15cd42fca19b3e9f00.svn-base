worker thread:

normal task:
	//so something

big task:
	atomic_inc wait_count
	
	{
		lock big

		add some wait_task

		where(true)
		{
			if (wait_count==worker_thread_count) break;
			add more wait_task
		}
	
		//do something

		atomic_dec wait_count
	}

wait task:
	atomic_inc wait_count
	
	{
		lock big
		atomic_dec wait_count
	}




