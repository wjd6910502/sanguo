int Connection::GetServerTime()
{ 
	timeval tm_now;
	gettimeofday(&tm_now, NULL);		
	int64_t nowtime = tm_now.tv_sec*1000000 + tm_now.tv_usec;			
	
	return (nowtime +_diffs2c)/1000000; 
}

void Connection::EstimateRTTbySample(int64_t roundtrip, int64_t diifsec)
{
	// 时间估算算法
	// EstmatisedRTT = (1-x)*EstimatedRTT + x*SampleRTT
	if(_esstimatesRTT == 0)
		_esstimatesRTT = roundtrip;
	if(_diffs2c == 0)
		_diffs2c = diifsec;

	_esstimatesRTT = (1-0.125)*_esstimatesRTT + 0.125*roundtrip;
	_diffs2c       = (1-0.125)*_diffs2c + 0.125*diifsec;
	
	fprintf(stderr,"-----------------------_esstimatesRTT = %ld , _diffs2c = %ld, servertime = %d \n", _esstimatesRTT, _diffs2c,GetServerTime());		
}
