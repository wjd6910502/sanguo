function UpdateTrialInfo(role)
	
	local hero_trial = role._roledata._wuzhe_shilian 
	hero_trial._cur_difficulty = 1
	hero_trial._high_difficulty = 1
	hero_trial._stage = 1	
	local sortArray = RandomArray()
