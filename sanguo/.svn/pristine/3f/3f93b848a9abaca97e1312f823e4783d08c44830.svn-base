	for i = 1,#sortArray do
		local dif_info = Cache.ShiLianDifficultyAttackInfo()
		dif_info._camp = i
		dif_info._difficulty = sortArray[i]
			
		--需要生成相对应的武将id,找到八个武将id 然后插入
