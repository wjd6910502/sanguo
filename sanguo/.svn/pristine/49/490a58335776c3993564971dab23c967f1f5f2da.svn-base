class PlayerManager
{
public:
	static PlayerManager& GetInstance()

	int Size() const { return _map_by_role_id.size(); }

	Role* Find(const Int64& k);

	RoleIter SeekToBegin() const { return RoleIter(_map_by_role_id.begin(), this, _tag); }
