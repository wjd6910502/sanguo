function NewCommand(typ)
	cmd = {}
	cmd.__type__ = typ
	return cmd
end

function NewMessage(typ)
	msg = {}
	msg.__type__ = typ
	return msg
end

function DumpTable(t)
	s = ""
	for k,v in pairs(t) do
		if type(v)=="table" then
			s = s..k.."={"..DumpTable(v).."};"
		elseif type(v)=="userdata" then
			s = s..k.."=USERDATA;"
		elseif type(v)=="boolean" then
			s = s..k.."="..tostring(v)..";"
		else
			s = s..k.."="..v..";"
		end
	end
	return s
end

